<link rel="stylesheet" type="text/css" href="../stylesheets/new.css"/>

<% include ../partials/navbar %>

<div class="siteOverlay"></div>

<div class="container thin-outline py-20px mb-20px">
    <div class="ui grid stackable">
        <div class="twelve wide column">
            <details open class="details-animated">
                <summary class="secondary-header">Hastalık Hakkında:<button class="editBtn">Değiştir</button></summary>
                <p class="details-child">Datayı buraya giriniz<button class="editBtn">Değiştir</button></p>
            </details>
        </div>
        <div class="four wide column">
            <div class="card info-card">
                <div class="image-div">
                    <img class="ui medium bordered image" alt="kart resim" srcset="/img/germ.jpg">
                    <p>Açıklama</p>
                </div>
                <div class="content">
                    <div class="header"><p>Hastalık İsmi</p></div>
                    <div class="description">
                        <p class="content-sub-header">
                            <span>Değer</span><span class="content-sub-text">Değer Karşılığı</span><button class="delBtn">Sil</button>
                        </p>
                    </div>
                    <button class="addRowBtn">Satır Ekle</button>
